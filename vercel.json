{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install && pip install -r requirements.txt",
  "outputDirectory": "build",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api" },
    { "src": "/(.*)", "dest": "/build/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "s-maxage=1, stale-while-revalidate" }]
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "build" }
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ]
}
